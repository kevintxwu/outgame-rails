<h1 class="notification"><%=@event.name%><span class="orange"> Information </span></h1>
<%= form_for @event do |f| %>
<div class="event-management">
  <table>
    <tr>
      <th>Type</th>
      <th>Value</th>
    </tr>
    <tr>
      <td style="width: 150px;">Name</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td style="width: 150px;">Date</td>
      <td><%= f.text_field :date %></td>
    </tr>
    <tr>
      <td style="width: 150px;">Type</td>
      <td>
        <%=f.select :event_type, options_for_select(['Netrunner','Magic The Gathering','Pokemon'])%>
      </td>
    </tr>
    <tr>
      <td style="width: 150px;">Bracket</td>
      <td>
        <%=f.select :bracket, options_for_select(%w[Non-Elimination])%>
      </td>
    </tr>
    <tr style="height: 150px">
      <td style="width: 150px;">Description</td>
      <td><%=f.text_area :description%></td>
    </tr>
  </table>
<%= f.submit 'Update Event', :class => "submit"%>
<% end%>
  <a href=<%=event_path(@event)%>><button class="submit" style="background: #b3b3b3; margin-left: 15px;">Cancel</button></a>
</div>
<div class="menu">
  <div class="title"> Menu </div>
  <a class="tab" href="/mockup-event-info">
    <img src="<%= image_path('pen.svg') %>"/>
    <span> Edit Info </span>
  </a>
  <a class="tab" href="/mockup-event-checkin"> 
    <img src="<%= image_path('person.svg') %>"/>
    <span> Check In </span>
  </a>
  <a class="tab" href="/mockup-event-brackets"> 
    <img src="<%= image_path('trophy.svg') %>"/>
    <span> Brackets </span>
  </a>
  <!--<a class="tab" href="#"> 
    <img src="<%= image_path('money.svg') %>"/>
    <span> Rewards </span>
  </a>-->
  <a class="tab" href="/mockup-event-summary">
    <img src="<%= image_path('stats.svg') %>"/>
    <span> Summary </span>
  </a>
  <a class="tab" href="/mockup-events"> 
    <img src="<%= image_path('trash.svg') %>"/>
    <span> Delete </span>
  </a>
</div>
