<h1 class="notification"> Create A <span class="orange"> New User </span></h1>
<div class="form">
  <%= form_for(@user) do |f| %>
    <table>
      <tr>
        <th>Type</th>
        <th>Value</th>
      </tr>
      <tr>
        <td style="width: 150px;">Name</td>
        <td> <%= f.text_field :name %> </td>
      </tr>
      <tr>
        <td style="width: 150px;">Email</td>
        <td> <%= f.text_field :email %> </td>
      </tr>
      <tr>
        <td style="width: 150px;">Password</td>
        <td> <%= f.password_field :password %> </td>
      </tr>
      <tr>
        <td style="width: 150px;">Password Confirmation</td>
        <td> <%= f.password_field :password_confirmation %> </td>
      </tr>
    </table>

    <%= f.submit "Create Account", class: "submit", type:"submit" %>
    <a href="/events"><button style="background: #b3b3b3; margin-left: 15px;">Cancel</button></a>
  <% end %>
</div>
